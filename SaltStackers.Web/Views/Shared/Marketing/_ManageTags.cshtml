<div class="modal fade" id="manage-tags-modal" ref="manageTagsModal" aria-hidden="true" aria-labelledby="manage-tags-label" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="manage-tags-label">Tags</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <table class="table table-hover table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Tag</th>
                            <th>Category</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="tag in allTags">
                            <td>{{tag.title}}</td>
                            <td>{{tag.categoryTitle}}</td>
                            <td>
                                <button class="btn btn-link text-decoration-none link-danger" title="Delete" v-on:click.prevent="removeTagFromRecipe(tag)" v-if="isTagExists(tag)"><i class="@Icon.ButtonDelete fa-lg"></i></button>
                                <button class="btn btn-link text-decoration-none link-primary" title="Add" v-on:click.prevent="addTagToRecipe(tag)" v-else><i class="@Icon.ButtonAdd fa-lg"></i></button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>