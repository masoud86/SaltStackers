@model SaltStackers.Application.ViewModels.Membership.ChangePassword
@{
    ViewData["Title"] = "تغییر کلمه عبور";
    ViewData["Icon"] = Icon.User;
}

<div asp-validation-summary="All" class="alert alert-danger"></div>
<form asp-area="Membership" asp-controller="User" asp-action="ChangePassword" method="post">
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="CurrentPassword"></label>
            <input asp-for="CurrentPassword" class="form-control text-end font-en direction-ltr" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control text-end font-en direction-ltr" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="NewPasswordConfirm"></label>
            <input asp-for="NewPasswordConfirm" class="form-control text-end font-en direction-ltr" />
            <span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <button type="submit" class="btn btn-sm btn-primary">@string.Format(Global.EditItem, Security.User)</button>
            <a asp-area="Membership" asp-controller="User" asp-action="Index" class="btn btn-sm btn-outline-secondary">@Global.Cancel</a>
        </div>
    </div>
</form>