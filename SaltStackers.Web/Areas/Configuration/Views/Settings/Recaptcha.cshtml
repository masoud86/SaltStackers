@model SaltStackers.Application.ViewModels.Settings.Recaptcha
@{
    ViewData["Title"] = Security.Recaptcha;
    ViewData["Icon"] = Icon.Settings;
}

<div asp-validation-summary="All" class="alert alert-danger"></div>
<form asp-area="Configuration" asp-controller="Settings" asp-action="Recaptcha" method="post">
    @Html.AntiForgeryToken()
    <div class="row mb-3">
        <div class="form-floating col-md-6 mb-3 mb-sm-0">
            <input asp-for="RecaptchaScoreThreshold" class="form-control" placeholder="RecaptchaScoreThreshold" />
            <label asp-for="RecaptchaScoreThreshold"></label>
            <span asp-validation-for="RecaptchaScoreThreshold" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="form-floating col-md-6 mb-3 mb-sm-0">
            <input asp-for="ReCaptchaSiteKey" class="form-control" placeholder="ReCaptchaSiteKey" />
            <label asp-for="ReCaptchaSiteKey"></label>
            <span asp-validation-for="ReCaptchaSiteKey" class="text-danger"></span>
        </div>
        <div class="form-floating col-md-6">
            <input asp-for="ReCaptchaSecretKey" class="form-control" placeholder="NewPasswordConfirm" />
            <label asp-for="ReCaptchaSecretKey"></label>
            <span asp-validation-for="ReCaptchaSecretKey" class="text-danger"></span>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">@Global.Edit</button>
            <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="btn btn-outline-secondary">@Global.Cancel</a>
        </div>
    </div>
</form>