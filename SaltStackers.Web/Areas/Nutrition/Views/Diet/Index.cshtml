@model SaltStackers.Application.ViewModels.Nutrition.Diets
@{
    ViewData["Title"] = "Diets";
    ViewData["Icon"] = Icon.Nutrition;
    Model.PageUrl = Url.Action("Index", "Diet", new { Area = "Nutrition" });
}
@section actions {
    <a href="#collapse-filters" class="mx-1" data-bs-toggle="collapse" aria-expanded="false"><i class="fas fa-fw fa-filter"></i></a>
}
<partial name="_Filters" />
<table class="table table-hover table-striped align-middle">
    <thead>
        <tr>
            <th>Order</th>
            <th>Title</th>
            <th>Permalink</th>
            <th>Last modified at</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items.Any())
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Order</td>
                    <td>
                        <img src="@item.IconUrl" width="50" alt="@item.Title" />
                        <span style="color: @item.Color">@item.Title</span>
                    </td>
                    <td>@item.Permalink</td>
                    <td>@item.EditDateTimeLocal</td>
                </tr>
            }
        }
    </tbody>
</table>
<partial name="_PagingInfo" model="Model" />