@model SaltStackers.Application.ViewModels.Nutrition.RecipeDto

@Html.AntiForgeryToken()
<div class="row">
    <div class="col-12 col-md-6">
        <div class="col-12 mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="RecipeType" class="form-label"></label>
            <select asp-for="RecipeType" class="form-select" asp-items="@(Html.GetEnumSelectList<RecipeType>())"></select>
            <span asp-validation-for="RecipeType" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="RecipeSize" class="form-label"></label>
            <select asp-for="RecipeSize" class="form-select" asp-items="@(Html.GetEnumSelectList<RecipeSize>())"></select>
            <span asp-validation-for="RecipeSize" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="Skill" class="form-label"></label>
            <select asp-for="Skill" class="form-select" asp-items="@(Html.GetEnumSelectList<SkillLevel>())"></select>
            <span asp-validation-for="Skill" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="PackagingTime" class="form-label"></label>
            <input asp-for="PackagingTime" class="form-control" />
            <span asp-validation-for="PackagingTime" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="Priority" class="form-label"></label>
            <input asp-for="Priority" class="form-control" />
            <span asp-validation-for="Priority" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="PersonalChefId" class="form-label"></label>
            <select asp-for="PersonalChefId" class="form-select" asp-items="@(new SelectList(Model.PersonalChefs, "Id", "Name"))">
                <option value="null">--- SELECT ---</option>
            </select>
            <span asp-validation-for="PersonalChefId" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="HeatingInstruction" class="form-label"></label>
            <input asp-for="HeatingInstruction" class="form-control" />
            <span asp-validation-for="HeatingInstruction" class="text-danger d-block"></span>
        </div>
        <div class="col-12 mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger d-block"></span>
        </div>

        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="MainMenu" aria-describedby="main-menu-help" />
                <label class="form-check-label" asp-for="MainMenu"></label>
            </div>
            <div id="main-menu-help" class="form-text">By checking this, the recipe will be displayed in the default menu.</div>
        </div>
        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="DefaultInCategory" aria-describedby="default-in-category-help" />
                <label class="form-check-label" asp-for="DefaultInCategory"></label>
            </div>
            <div id="default-in-category-help" class="form-text">By checking this, the recipe will be displayed in its own categories list by default.</div>
        </div>
        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsOption" aria-describedby="option-help" />
                <label class="form-check-label" asp-for="IsOption"></label>
            </div>
            <div id="option-help" class="form-text">By checking this, the recipe will be displayed in the options list on the recipe details page.</div>
        </div>
        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsRoutine" aria-describedby="routine-help" />
                <label class="form-check-label" asp-for="IsRoutine"></label>
            </div>
            <div id="routine-help" class="form-text">By checking this, the recipe will be marked as routine, and ingredients will not be displayed in the reports.</div>
        </div>
        @* <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Orderable" />
                <label class="form-check-label" asp-for="Orderable"></label>
            </div>
        </div> *@
        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsActive" aria-describedby="active-help" />
                <label class="form-check-label" asp-for="IsActive"></label>
            </div>
            <div id="active-help" class="form-text">By checking this, the recipe will be displayed.</div>
        </div>
        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsNew" aria-describedby="new-help" />
                <label class="form-check-label" asp-for="IsNew"></label>
            </div>
            <div id="new-help" class="form-text">By checking this, the recipe will be marked as new and displayed at the top of the list.</div>
        </div>
        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsTwoStepCooking" aria-describedby="two-step-cooking-help" />
                <label class="form-check-label" asp-for="IsTwoStepCooking"></label>
            </div>
            <div id="two-step-cooking-help" class="form-text">By checking this, the recipe will be marked as two-step cooking and will be dwfined in the reports.</div>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="col-12 mb-3">
            <label asp-for="RecipeDetails" class="form-label"></label>
            <ckeditor :editor="editor" v-model="recipeDetails" :config="editorConfig"></ckeditor>
            <input type="hidden" asp-for="RecipeDetails" ref="recipeDetailsTemp" />
            <span asp-validation-for="RecipeDetails" class="text-danger d-block"></span>
        </div>
    </div>
</div>