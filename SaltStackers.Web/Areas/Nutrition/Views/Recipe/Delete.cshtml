@model SaltStackers.Application.ViewModels.Nutrition.DeleteRecipe
@{
    ViewData["Title"] = string.Format(Global.DeleteItem, Health.Recipe);
    ViewData["Icon"] = Icon.Nutrition;
}

<div asp-validation-summary="All" class="alert alert-danger"></div>
<form asp-area="Nutrition" asp-controller="Recipe" asp-action="Delete" asp-route-id="@Model.Id" asp-route-foodId="@Model.FoodId" method="post">
    <p>@(Html.Raw(string.Format(Global.DeleteConfirm, Health.Recipe, Model.Title)))</p>
    <div class="row mt-3">
        <div class="col-md-12">
            <button type="submit" class="btn btn-sm btn-danger text-white">@string.Format(Global.DeleteItem, Health.Recipe)</button>
            <a asp-area="Nutrition" asp-controller="Recipe" asp-action="Index" asp-route-foodId="@Model.FoodId" class="btn btn-sm btn-outline-secondary">@Global.Cancel</a>
        </div>
    </div>
</form>