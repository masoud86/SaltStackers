@model SaltStackers.Application.ViewModels.Nutrition.IngredientDto

@Html.AntiForgeryToken()
<div class="col-12 mb-3">
    <label asp-for="Title" class="form-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger d-block"></span>
</div>
<div class="col-12 mb-3">
    <label asp-for="UnitId" class="form-label"></label>
    <select asp-for="UnitId" class="form-select" asp-items="@(new SelectList(Model.Units, "Id", "Title", null, "Category"))"></select>
    <span asp-validation-for="UnitId" class="text-danger d-block"></span>
</div>
<div class="col-12 mb-3">
    <label asp-for="OrderPeriod" class="form-label"></label>
    <select asp-for="OrderPeriod" class="form-select" asp-items="@(Html.GetEnumSelectList<OrderPeriod>())"></select>
    <span asp-validation-for="OrderPeriod" class="text-danger d-block"></span>
</div>
<div class="col-12 mb-3">
    <label asp-for="CookingCategoryId" class="form-label"></label>
    <select asp-for="CookingCategoryId" class="form-select" asp-items="@(new SelectList(Model.CookingCategories, "Id", "Title", null))"></select>
    <span asp-validation-for="CookingCategoryId" class="text-danger d-block"></span>
</div>