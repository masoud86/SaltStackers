@model SaltStackers.Application.ViewModels.Nutrition.DeleteIngredient
@{
    ViewData["Title"] = string.Format(Global.DeleteItem, Health.Ingredient);
    ViewData["Icon"] = Icon.Nutrition;
}

<div asp-validation-summary="All" class="alert alert-danger"></div>
<form asp-area="Nutrition" asp-controller="Ingredient" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Title" />
    <p>@(Html.Raw(string.Format(Global.DeleteConfirm, Health.Ingredient, Model.Title)))</p>
    <div class="row mt-3">
        <div class="col-md-12">
            <button type="submit" class="btn btn-sm btn-danger text-white">@string.Format(Global.DeleteItem, Health.Ingredient)</button>
            <a asp-area="Nutrition" asp-controller="Ingredient" asp-action="Index" class="btn btn-sm btn-outline-secondary">@Global.Cancel</a>
        </div>
    </div>
</form>